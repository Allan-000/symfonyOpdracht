{% extends 'base.html.twig' %}

{% block title%}Home{% endblock %}

{# body #}
{% block body %}

<div class='home-body container'>
    <div class='row mt-3'>
        {% for category in categories %}
        <div class="col col-lg-4 col-sm-12">
            <div class=" card h-100">
                <div class="card-body">
                    <img class="card-img" src="/img/pizza-{{category}}.jpg">
                    <h3 class="card-title">{{category}}</h3>
                    <p class="card-text">Dit zijn {{category}} pizza's .</p>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <button class="btn btn-warning"><a href="#" class="text-dark text-decoration-none"> bekijk alle {{category}} pizza's .</a></button>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}


